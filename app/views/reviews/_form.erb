<% if @review.errors.full_messages.any? %>
    <% @review.errors.full_messages.each do |error_message| %>
        <%= error_message if @review.errors.full_messages.first == error_message %> <br />
    <% end %>
<% end %>

<%= form_for [@business, @review] do |f| %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.label :rating %>
      <%= f.number_field :rating, in: 1..5 %>
    </p>

    <%= f.submit 'Submit' %>

<% end %>